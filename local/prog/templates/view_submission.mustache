<div class="d-flex" style="gap:30px; align-items:flex-start;">

    <div class="flex-fill">
        {{{pagingbar}}}

        {{#submissions}}
        <div class="card mb-3">
            <div class="card-body d-flex align-items-center">
                <div style="width: 80px; text-align:center; padding:5px; background:{{color}}; color:white; border-radius:4px; font-size: 0.8em;">
                    <strong>{{points}}</strong><br>
                    <span>{{result}} | {{language}}</span>
                </div>
                <div class="flex-fill pl-3">
                    <strong>{{problem}}</strong><br>
                    <span class="text-muted" style="font-size: 0.8em;">submitted {{dateStr}} ago</span>
                </div>
                <div class="text-right text-muted" style="min-width: 100px; font-size: 0.8em;">
                    <a href="{{viewlink}}" class="btn btn-link p-0 m-0">view</a><br>
                    <small>{{time}}<br>{{memory}}</small>
                </div>
            </div>
        </div>
        {{/submissions}}

        {{^submissions}}
        <div class="alert alert-warning">No submissions found.</div>
        {{/submissions}}

        {{{pagingbar}}}
    </div>

    <div style="width:300px;">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Filter submissions</h5>
                {{{filterform}}}
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Statistics</h5>
                <canvas id="submissionChart" width="260" height="260"></canvas>
                <p style="text-align:center;">Total: {{total}}</p>
            </div>
        </div>
    </div>
</div>

<div class="mt-4" style="text-align:center;">
    <a href="{{backurl}}" class="btn btn-secondary">⬅️ Back to statistics</a>
</div>
