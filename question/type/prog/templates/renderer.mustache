<div class="global-problem-info" style="border: 2px solid blue; padding: 10px; margin-bottom: 20px; background: #eef;">
    <h3>Programming Problem</h3>
    <strong>Code:</strong> {{problemcode}}<br>
    <strong>Name:</strong> {{name}}<br><br>
    <strong>Description:</strong><br>
    {{{description}}}
</div>

<button type="button" id="{{themeButtonId}}" style="margin: 10px 5px; background-color: #ccc; padding: 5px 10px; font-weight: bold;">
    Switch Theme
</button>

<textarea name="{{inputname}}" id="{{editorid}}" rows="10" cols="80" style="width: 100%; margin-top: 15px;">{{answer}}</textarea>

<label for="{{selectId}}">Choose language:</label>
<select id="{{selectId}}" style="margin-top: 10px; margin-bottom: 10px;">
    {{#languages}}
        <option value="{{id}}">{{name}}</option>
    {{/languages}}
</select>

<br>

<button type="button" id="{{submitButtonId}}" style="margin-top: 10px; background-color: yellow; padding: 5px 10px; font-weight: bold;">
    Submit
</button>

<button type="button" id="{{showSubmissionsButtonId}}" style="margin-top: 10px; background-color: lightgreen; padding: 5px 10px; font-weight: bold;">
    Show Submissions
</button>

<!-- ðŸ”½ Submission result container -->
<div id="{{submissionListContainerId}}" style="margin-top: 10px;"></div>

<!-- ðŸŸ¡ Current submission result -->
<div class="submission-result" id="{{resultContainerId}}" style="margin-top: 10px;"></div>

<!-- ðŸ§¾ Code styling -->
<style>
    .submission-source {
        font-family: monospace;
        white-space: pre-wrap;
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        padding: 10px;
        margin-top: 5px;
    }
</style>

<input type="hidden" name="{{submissionidname}}" value="{{submissionid}}">
